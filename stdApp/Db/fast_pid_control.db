grecord(transform,"$(P)$(PID)_limits") {
        field(DESC,"PID limits")
        field(CMTA,"Low input")
        field(INPA,"$(DRVL)")
        field(CMTB,"High limit")
        field(INPB,"$(DRVH)")
        field(CMTO,"Low output")
        field(CLCO,"a")
        field(OUTO,"$(P)$(PID).DRVL NPP NMS")
        field(CMTP,"High output")
        field(CLCP,"b")
        field(OUTP,"$(P)$(PID).DRVH NPP NMS")
        field(PREC,"$(PREC)")
}
